.body{
    width: 100%;
    height: 100%;
    background-color: #111;
}
.search-wrapper {
    position: fixed;/*悬停搜索框的关键样式*/
    top: 0px;
    width: 100%;
    z-index: 999;
}


.search-section {
    margin-top: 20rpx;
    margin-left: 50rpx;
    margin-right: 50rpx;
    text-align: center;
    display: flex;
    flex-direction: row;
}


.search-input-wrapper {
    flex: 8;
    padding: 5px 0px;
    background-color: #fff;
}

.search-input {
    font-size: 12px;
}


.search-button-wrapper {

}

.search-button {
    font-size: 12px;
    width: 50px;
    height: 40px;
    margin: 0;
    padding: 5px 0px;
    border-radius: 0;
    text-align: center;
    border-style: hidden;
}

.navigator-box {
    margin-left: 50rpx;
    margin-right: 50rpx;
    opacity: 0;
    position: relative;
    background-color: #FFFFFF;
    line-height: 1.2;
    font-size: 20rpx;
    transform: translateY(-20%);
    transition: .3s;
}
.navigator-box-show {
    opacity: 1;
    transform: translateY(0);
}
.navigator {
    padding: 20rpx 30rpx;
    position: relative;
    display: flex;
    align-items: center;
}
.navigator:before {
    content: " ";
    position: absolute;
    left: 30rpx;
    top: 0;
    right: 30rpx;
    height: 1px;
    border-top: 1rpx solid #D8D8D8;
    color: #D8D8D8;
}
.navigator:first-child:before {
    display: none;
}
.navigator-text {
    flex: 1;
}
